pipeline {
    agent {
        docker { image 'openjdk:17' }
    }
    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/Eagle-008/Jenkins-Zero-To-Hero/blob/main/my-first-pipeline.git', branch: 'main'
            }
        }
        stage('Build') {
            steps {
                sh 'ls -l'  // debug
                sh 'javac HelloWorld.java'
            }
        }
        stage('Run') {
            steps {
                sh 'java HelloWorld'
            }
        }
    }
}
