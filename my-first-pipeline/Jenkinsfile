pipeline {
  agent {
    docker { image 'openjdk:17'
           args '-v $WORKSPACE:/workspace'}
  }
  stages {
        stage('Build') {
            steps {
                sh 'javac helloworld.java'
            }
        }
        stage('Run') {
            steps {
                sh 'java helloworld'
            }
        }
  }
}
