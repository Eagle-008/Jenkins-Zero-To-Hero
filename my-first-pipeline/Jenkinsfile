pipeline {
    agent {
        docker { image 'openjdk:17' }
    }
    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/Eagle-008/Jenkins-Zero-To-Hero.git', branch: 'main'
            }
        }
       stage('Build') {
            steps {
                dir('my-first-pipeline') {
                    sh 'ls -l'
                    sh 'javac helloworld.java'
                }
            }
        }
        stage('Run') {
            steps {
                dir('my-first-pipeline') {
                    sh 'java helloworld'
                }
            }
        }
    }
}
